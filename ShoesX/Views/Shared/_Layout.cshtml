<script>
// Cart UI fonksiyonları
let cartSidebarOpen = false;

function toggleCartSidebar() {
    const sidebar = document.getElementById('cartSidebar');
    cartSidebarOpen = !cartSidebarOpen;
    
    if (cartSidebarOpen) {
        if (sidebar) {
            sidebar.classList.add('show');
            document.body.style.overflow = 'hidden';
        }
        // Cart display'i güncelle
        if (window.mainApp && window.mainApp.cartManager) {
            window.mainApp.cartManager.updateCartDisplay();
        }
    } else {
        if (sidebar) {
            sidebar.classList.remove('show');
            document.body.style.overflow = 'auto';
        }
    }
}

// Global cart display güncelleme
function updateCartBadgeGlobal() {
    const badge = document.getElementById('cartBadge');
    if (!badge) return;
    
    let totalItems = 0;
    
    // MainApp'den cart verilerini al
    if (window.mainApp && window.mainApp.cartManager && window.mainApp.cartManager.cart) {
        totalItems = window.mainApp.cartManager.cart.length;
    }
    
    badge.textContent = totalItems;
    
    if (totalItems > 0) {
        badge.style.display = 'flex';
        badge.classList.remove('empty');
    } else {
        badge.style.display = 'none';
        badge.classList.add('empty');
    }
}

// MainApp yüklendiğinde cart display'i bağla
document.addEventListener('DOMContentLoaded', function() {
    // Birkaç saniye sonra kontrol et
    setTimeout(function() {
        if (window.mainApp && window.mainApp.cartManager) {
            // Cart manager'a badge güncelleyici ekle
            const originalUpdateCartDisplay = window.mainApp.cartManager.updateCartDisplay;
            window.mainApp.cartManager.updateCartDisplay = function() {
                originalUpdateCartDisplay.call(this);
                updateCartBadgeGlobal();
            };
            
            // İlk yüklemede badge'i güncelle
            updateCartBadgeGlobal();
            
            console.log('Cart badge connected to MainApp');
        } else {
            console.warn('MainApp not ready, retrying cart badge connection...');
            // Tekrar dene
            setTimeout(arguments.callee, 1000);
        }
    }, 2000);
});

// Global güvenli fonksiyonlar
window.toggleCartSidebar = toggleCartSidebar;
window.updateCartBadgeGlobal = updateCartBadgeGlobal;

// Override MainApp'deki updateCartBadge
window.updateCartBadge = updateCartBadgeGlobal;
window.updateCartDisplay = function() {
    if (window.mainApp && window.mainApp.cartManager) {
        window.mainApp.cartManager.updateCartDisplay();
    }
    updateCartBadgeGlobal();
};
