@{
    ViewData["Title"] = "Shoe Catalog";
}

<div class="container-fluid">
    <div class="row">
        <!-- Left Panel - Filters -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-filter"></i> Filters</h5>
                </div>
                <div class="card-body">
                    <form id="filterForm" method="get">
                        <!-- Product Code Search -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Product Code</label>
                            <input type="text" class="form-control" name="productCode" placeholder="3000-1, 3000-2...">
                        </div>

                        <!-- Description Search -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Description</label>
                            <input type="text" class="form-control" name="description" placeholder="BLACK LEATHER, NUBUCK...">
                        </div>

                        <!-- Color Filter -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Color</label>
                            <div class="filter-group">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="BLACK" id="black">
                                    <label class="form-check-label" for="black">BLACK</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="BROWN" id="brown">
                                    <label class="form-check-label" for="brown">BROWN</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="NAVY" id="navy">
                                    <label class="form-check-label" for="navy">NAVY</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="GREY" id="grey">
                                    <label class="form-check-label" for="grey">GREY</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="KHAKI" id="khaki">
                                    <label class="form-check-label" for="khaki">KHAKI</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="TAN" id="tan">
                                    <label class="form-check-label" for="tan">TAN</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="BLUE" id="blue">
                                    <label class="form-check-label" for="blue">BLUE</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="SAND" id="sand">
                                    <label class="form-check-label" for="sand">SAND</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="CHARCOAL" id="charcoal">
                                    <label class="form-check-label" for="charcoal">CHARCOAL</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="ASPHALT" id="asphalt">
                                    <label class="form-check-label" for="asphalt">ASPHALT</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="FUCHSIA" id="fuchsia">
                                    <label class="form-check-label" for="fuchsia">FUCHSIA</label>
                                </div>
                            </div>
                        </div>

                        <!-- Material Filter -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Inner Material</label>
                            <div class="filter-group">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="LEATHER" id="leather">
                                    <label class="form-check-label" for="leather">LEATHER</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="NUBUCK" id="nubuck">
                                    <label class="form-check-label" for="nubuck">NUBUCK</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="CRAZY" id="crazy">
                                    <label class="form-check-label" for="crazy">CRAZY</label>
                                </div>
                            </div>
                        </div>

                        <!-- Size Filter -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Size</label>
                            <div class="filter-group">
                                <div class="row">
                                    @for (int i = 40; i <= 45; i++)
                                    {
                                        <div class="col-4 mb-1">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="@i" id="size@i">
                                                <label class="form-check-label" for="size@i">@i</label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Price Range -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Price Range (CFT)</label>
                            <div class="row">
                                <div class="col-6">
                                    <input type="number" class="form-control form-control-sm" name="minPrice" placeholder="Min" step="0.01">
                                </div>
                                <div class="col-6">
                                    <input type="number" class="form-control form-control-sm" name="maxPrice" placeholder="Max" step="0.01">
                                </div>
                            </div>
                        </div>

                        <!-- Stock Status -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Stock Status</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="inStock">
                                <label class="form-check-label" for="inStock">In Stock</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="lowStock">
                                <label class="form-check-label" for="lowStock">Low Stock (≤5)</label>
                            </div>
                        </div>

                        <!-- Assorted -->
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="assorted">
                                <label class="form-check-label" for="assorted">Assorted Products</label>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Filter
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="clearFilters()">
                                <i class="fas fa-times"></i> Clear
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right Panel - Shoes -->
        <div class="col-md-9">
            <!-- Top Bar -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h4>Shoe Catalog</h4>
                    <span class="text-muted">Total 36 products found</span>
                </div>
                <div class="d-flex align-items-center">
                    <label class="me-2">Sort by:</label>
                    <select class="form-select form-select-sm" style="width: 180px;">
